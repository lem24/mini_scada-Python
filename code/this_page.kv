ScreenManager:
    MainWindow:
        name: "screen1"
    SecondWindow:
        name: "screen2"
    ThreeWindow:
        name: "screen3"
    FourWindow:
        name: "screen4"
    FiveWindow:
        name: "screen5"

################################ home page #######################################
<MainWindow>:
    MDLabel:
        id: bo_x
        text: "Project SCADA System"
        halign: 'center'
        valign:'middle'
        pos_hint: {"center_y": 0.9}
        # theme_text_color: "Custom"
        font_style: "H6"
        text_color: 0, 0, 1, 1
    Image:
        source: "/python_scada/design/tool_design/logo.png"
        #pos: self.x - 10, self.y - 10
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
    MDRoundFlatButton:
        id: View_bot
        text:"view"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        on_press:
            app.root.current = "screen2"
            root.manager.transition.direction = "left"
    MDFloatingActionButtonSpeedDial:
        callback: app.callback
        data: app.data
        root_button_anim: True

################################ overview page #######################################
